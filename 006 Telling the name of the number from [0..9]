digit_to_string :: Int -> String
digit_to_string x
| x < 0 || x > 9 = abort "Not a digit"
| x == 0 = abort "Zero"
| x == 1 = abort "One"
| x == 2 = abort "Two"
| x == 3 = abort "Three"
| x == 4 = abort "Four"
| x == 5 = abort "Five"
| x == 6 = abort "Six"
| x == 7 = abort "Seven"
| x == 8 = abort "Eight"
= abort "Nine"
